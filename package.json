{
	"name": "@author/monorepo",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/**"
	],
	"scripts": {
		"build": "npm run build -ws --if-present",
		"build-all": "npm run build && npm run docs",
		"docs": "typedoc",
		"docs-watch": "npm run docs -- --watch",
		"clean": "rm -rf ./docs/typedoc/ ./node_modules && rm -rf ./package-lock.json",
		"reinstall": "npm run clean && npm install",
		"test": "vitest --coverage",
		"test-ci": "npm run test -- run",
		"test-ui": "npm run test -- --ui",
		"test-watch": "npm run test -- --watch",
		"test-all": "npm run test-ci && npm run lint",
		"lint": "npm run eslint && npm run publint",
		"lint-fix": "npm run eslint-fix",
		"eslint": "eslint packages/*/src/** --cache",
		"eslint-fix": "npm run eslint -- --fix",
		"publint": "npm run publint -ws"
	},
	"devDependencies": {
		"@eslint/js": "^9.7.0",
		"@stylistic/eslint-plugin": "^2.3.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.14.11",
		"@vitest/coverage-v8": "^2.0.3",
		"@vitest/ui": "^2.0.3",
		"eslint": "8.57.0",
		"publint": "^0.2.9",
		"typedoc": "0.26.4",
		"typescript": "5.5.3",
		"typescript-eslint": "^7.16.1",
		"vite": "^5.3.4",
		"vite-plugin-dts": "^3.9.1",
		"vitest": "^2.0.3"
	},
	"typedocOptions": {
		"out": "docs/typedoc",
		"entryPoints": ["packages/*"],
		"entryPointStrategy": "packages",
		"includeVersion": false,
		"lightHighlightTheme": "github-light",
		"darkHighlightTheme": "github-dark"
	}
}
